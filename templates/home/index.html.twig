{% extends 'base.html.twig' %}
{% block carousel %} {% endblock %}

{% block content %}
<!-- Three columns of text below the carousel -->
        <h3>Nos meilleures ventes</h3>
        <p>Découvrez les articles les plus vendus.</p>
        <div class="row">
            {% for product in products %}
                <div class="col-md-3">
                    {% include 'product/single_product.html.twig' %}
                </div>
            {% endfor %}
        </div><!-- /.row -->



        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
            <h2 class="featurette-heading" style="margin-top: 1em">Un large choix de produits parapharmaceutique (santé, beauté, et bien être)  <br><span class="text-muted">   au meilleur prix</span></h2>
            </div>
            <div class="col-md-5">
                <img src="https://www.la-pharmacie-vert-pom.fr/wp-content/uploads/2021/03/parapharmacie-pom-verte.jpg" class="img-fluid" alt="Un savoir-faire Tunisien">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading" style="margin-top: 1em">Une équipe professionnels  <span class="text-muted">pour des conseils personnalisés</span></h2>
            </div>
            <div class="col-md-5 order-md-1">
            <img src="https://www.mariefrance.fr/wp-content/uploads/sites/5/2019/07/parapharmacie-750x410.jpg" class="img-fluid" alt="Une boutique ouverte toute l'année">

            </div>
        </div>

        <hr class="featurette-divider">

        <!-- /END THE FEATURETTES -->
{% endblock %}