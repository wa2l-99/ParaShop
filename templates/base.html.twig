<!Doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="La boutique qui vend 100% made in Tunisie.">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %}PharmaShop{% endblock %}</title>
    <link rel="icon" href=
    "{{ asset('assets/img/icone-home-naturel.png') }}"
          type="image/x-icon">
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/boutiquetunisienne.css') }}">
    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    {% block javascript %}

    {% endblock %}

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md fixed-top bg-info.bg-gradient" style="background-color: rgba(243,244,246,1);">
        <a class="navbar-brand" href="{{ path('home') }}" style="color:#007f2d">
            <div class="row">
                <div class="col-sm-8">
                    <div class="logo-image " style="
    width: 70px;
    height: 70px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: -25px">
                        <img src="{{ asset('assets/img/icone-home-naturel.png') }}" class="img-fluid ">
                    </div>
                </div>
                <div class="col-sm-4"><b>PharmaShop</b><br> <small>VOTRE PARTENAIRE SANTÉ</small>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        </div>
        </div>


        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href={{ path('products') }} style="color:#696973"><b>Nos produits</b></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#" style="color:#696973"><b>Qui sommes-nous ?</b></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#" style="color:#696973"><b>Contact</b></a>
                </li>
            </ul>

            <div class="navbar-item-custom">
                {% if app.user %}
                    <a href="{{ path('account') }}" role="button" style="color:#696973">Mon compte
                        <small>({{ app.user.firstname }})</small></a> | <a href="{{ path('app_logout') }}"><span
                            class="iconify" data-icon="fa-solid:sign-out-alt" data-width="40" data-height="40"></span>Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" role="button" style="color:#696973;"><span class="iconify"
                                                                                                 data-icon="mdi:account-circle"
                                                                                                 data-width="40"
                                                                                                 data-height="40"></span><b>Connexion</b></a> |
                    <a href="{{ path('register') }}" role="button" style="color:#696973;"> <span class="iconify"
                                                                                                 data-icon="mdi:pencil-circle-outline"
                                                                                                 data-width="40"
                                                                                                 data-height="40"></span><b>Inscription&nbsp</b></a>
                {% endif %}
            </div>
            <a href="{{ path ('cart') }}">
                <span class="iconify" data-icon="mdi:cart-outline" data-width="40" data-height="40"
                      style="color:#696973;"></span> </a>
        </div>
    </nav>
</header>

<main role="main">

    {% if block('carousel') is defined %}
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="bd-placeholder-img" width="100%" height="100%"
                     src="{{ asset('/assets/img/cosmetic-pharmaplus.png') }}" preserveAspectRatio="xMidYMid slice"
                     focusable="false" role="img">
                <rect width="100%" height="100%" fill="#777"/>
                </img>
                <div class="container">
                    <div class="carousel-caption" style="color:#000;">
                        <h1>Nos Produits</h1>
                        <p> Découvrez notre sélection de produits<br>

                            <small>Une sélection des plus grandes marques! <small></p>
                        <p><a class="btn btn-lg btn-success " href="{{ path('products') }}" role="button">Découvrir</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <a href="{{ path('products') }}"><img class="bd-placeholder-img" width="100%" height="100%"
                                                      src="{{ asset('/assets/img/img1.png') }}"
                                                      preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                    <rect width="100%" height="100%" fill="#777"/>
                    </img></a>

            </div>
            <div class="carousel-item">
                <a href="{{ path('products') }}"><img class="bd-placeholder-img" width="100%" height="100%"
                                                      src="{{ asset('/assets/img/slider1.jpg') }}"
                                                      preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                    <rect width="100%" height="100%" fill="#777"/>
                    </img> </a>

            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Avant</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Aprés</span>
            </a>
        </div>
        {% endif %}


        <!-- Marketing messaging and featurettes
        ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->

        <div class="container marketing {% if block('carousel') is not defined %} mt-5 {% endif %} ">

            {% block content %}

            {% endblock %}
        </div><!-- /.container -->

        <!-- FOOTER -->
        <footer class="footer-costum" style="background-color: #ddffe2;">
            <p>
                &copy; Copyright © PharmaShop. All Rights Reserved.<br>
                <small><a href="#">Privacy</a> &middot; <a href="#">Terms</a><small>
            </p>
        </footer>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
</body>
{% block script %}

{% endblock %}
</html>
